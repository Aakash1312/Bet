<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enable"
        android:id="@+id/enable"
        android:layout_gravity="right"
        android:onClick="enable"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="discover"
        android:id="@+id/discover"
        android:layout_gravity="right"
        android:onClick="discover"/>
    <LinearLayout
        android:layout_width="479dp"
        android:id="@+id/linearLayout1"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <fragment
            class="com.mygdx.game.DeviceListFragment"
            android:id="@+id/frag_list"
            android:layout_width="@dimen/phone_list_height"
            android:layout_height="match_parent"
            tools:layout="@layout/device_list">
            <!-- Preview: layout=@layout/row_devices -->
        </fragment>
        <fragment
            class="com.mygdx.game.DeviceDetailFragment"
            android:id="@+id/frag_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/device_detail">
            <!-- Preview: layout=@layout/device_detail -->
        </fragment>
    </LinearLayout>
</LinearLayout>
